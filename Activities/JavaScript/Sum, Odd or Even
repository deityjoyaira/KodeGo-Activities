<body>
    <div class="container">
        <h2>Activity #17</h2> <br>
        <p><input id="first" placeholder="Enter First Number"></p>
        <p><input id="second" placeholder="Enter Second Number"></p>
        <button onclick="add()" class="button">Calculate</button>
        <p>Sum = <input id = "sum" class="result"></p>
        <p> The Number is <input id = "OddEven" class="result"></p>
    </div>
    <script>
        function add()
        {
          var num1, num2, sum, res, OddEven;
          num1 = parseInt(document.getElementById("first").value);
          num2 = parseInt(document.getElementById("second").value);
          sum = num1 + num2;
          document.getElementById("sum").value = sum;

          res = sum % 2;
            if (res == 1){
                OddEven = "Odd";
            }
            else if (res == 0){
                OddEven = "Even";
            }

            document.getElementById("OddEven").value = OddEven;
        }
       
 



        </script>


